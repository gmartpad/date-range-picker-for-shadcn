{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "es2016",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "bundler",
    "lib": ["ES2016", "DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*"],
  "exclude": ["demo", "node_modules", "dist"]
}
